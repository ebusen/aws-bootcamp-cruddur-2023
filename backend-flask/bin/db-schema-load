#! /usr/bin/bash


CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

schema_path=$(realpath .)/db/schema.sql

echo $schema_path

#$1 stands for argument that s written after the bash command to run the script
#when executing the script we need to add the argument at the end as ./bin/db-schema-load prod
#$0 stands for the command itself
if [ "$1" = "prod" ]; then
  echo "using production"
  CON_URL=$PROD_CONNECTION_URL
else
  CON_URL=$CONNECTION_URL
fi

psql $CON_URL cruddur<$schema_path