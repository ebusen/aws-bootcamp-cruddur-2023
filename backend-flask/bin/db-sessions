#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-sessions"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

#$1 stands for argument that s written after the bash command to run the script
#when executing the script we need to add the argument at the end as ./bin/db-schema-load prod
#$0 stands for the command itself
if [ "$1" = "prod" ]; then
  echo "using production"
  CON_URL=$PROD_CONNECTION_URL
else
  CON_URL=$CONNECTION_URL
fi

#we have to exclude the slash and database name from connection url so that we can drop it.
#otherwise, we will be connected to the database therefore we will not be able to drop the database.
NO_DB_CONNECTION_URL=$(sed 's/\/cruddur//g' <<<"$CON_URL")
#we are looking for active processes(sessions) before we can drop the database
psql $NO_DB_CONNECTION_URL -c "select pid as process_id, \
       usename as user,  \
       datname as db, \
       client_addr, \
       application_name as app,\
       state \
from pg_stat_activity;"